<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/details_section_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/detail_summary_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="5.0dip"
        android:text="@string/book_introduction"
        android:textColor="#669900"
        android:textSize="18.0sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip" >

        <CheckedTextView
            android:id="@+id/detail_summary"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4.0dip"
            android:maxLines="6"
            android:textColor="#ff3d3d3b"
            android:textSize="14.0sp" />

        <CheckBox
            android:id="@+id/detail_summary_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/detail_summary"
            android:layout_marginRight="3dip"
            android:button="@drawable/detail_summary_toggle"
            android:gravity="center" />
    </RelativeLayout>

</LinearLayout>