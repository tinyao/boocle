<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/listitem_shot_selector"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="8dip" >

            <!-- android:src="@drawable/avatar_default" -->

            <com.czzz.view.RoundImageView
                android:id="@+id/explore_user_avatar"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/explore_user_avatar_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#fff"
                android:textSize="26sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/explore_user_item_name"
                style="@style/search_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Name"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/explore_user_item_name"
                android:paddingTop="20dp" >

                <ImageView
                    android:id="@+id/explore_user_item_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="fitStart"
                    android:alpha="0.7"
                    android:paddingBottom="2dip"
                    android:paddingTop="2dip"
                    android:src="@drawable/gender_icon_check" />

                <TextView
                    android:id="@+id/explore_user_item_desc"
                    style="@style/search_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="10dip"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:text="address风俗的风俗锋NssffdsfsfdsfdsfdgdsgIHAOsssssss" />
            </LinearLayout>

            <TextView
                android:id="@+id/explore_user_item_collections"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/explore_user_item_name"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/explore_user_item_name"
                android:layout_marginRight="10dip"
                android:alpha="0.7"
                android:background="@drawable/bg_book_count"
                android:gravity="center"
                android:singleLine="true"
                android:text="31"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>