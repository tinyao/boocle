<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/abs__list_selector_holo_light"
    android:orientation="horizontal" >

    <com.czzz.view.RoundImageView
        android:id="@+id/thread_item_avatar"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="8dip"
        android:src="@drawable/avatar_default" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip" >

            <TextView
                android:id="@+id/thread_item_name"
                style="@style/search_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="陈甲第"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/thread_item_unread_count"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/thread_item_name"
                android:background="@drawable/unread_corner_bg"
                android:gravity="center"
                android:text="2"
                android:textColor="#fff"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/thread_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:text="2天前"
                android:textColor="@color/explore_sub_color_selector"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/thread_item_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="把所有的温柔留在饭否，再去面对那个充满感冒病毒的世界。"
                android:textColor="@color/explore_sub_color_selector"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>