<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/bookcase_detail_item_cover"
            android:layout_width="71dip"
            android:layout_height="97dip"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="5dip"
            android:scaleType="fitXY"
            android:background="@drawable/general__book_cover_view__list_shadow"
            android:src="@drawable/default_bookcover0" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip" >

            <ImageView
                android:id="@+id/bookcase_detail_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_order_new" />

            <TextView
                android:id="@+id/bookcase_detail_item_title"
                style="@style/search_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dip"
                android:singleLine="true"
                android:text="可爱的Python" />

            <LinearLayout
                android:id="@+id/blabla"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dip"
                android:layout_marginTop="35dip"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <RatingBar
                        android:id="@+id/shelf_book_score"
                        style="@style/bookRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5" />

                    <TextView
                        android:id="@+id/bookcase_detail_item_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:singleLine="true"
                        android:text="2天前"
                        android:textColor="@color/general__shared__color_999999"
                        android:textSize="11sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/bookcase_detail_item_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="作者: 哲思社区"
                    android:textColor="@color/explore_sub_color_selector"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/bookcase_detail_item_publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="出版: 电子工业出版社"
                    android:textColor="@color/explore_sub_color_selector"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/bookcase_detail_item_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:maxLines="4"
                    android:lineSpacingExtra="1sp"
                    android:text="备注: 书是去年买的，看过一遍。还比较新看过一遍。还比较新看过一遍。还比较新的..."
                    android:textColor="@color/explore_sub_color_selector"
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/divider" />

</LinearLayout>