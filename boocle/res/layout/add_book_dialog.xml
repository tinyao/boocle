<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dip"
    android:paddingBottom="20dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >

    <LinearLayout
        android:id="@+id/add_book_to_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_view_rounded_single"
        android:clickable="true"
        android:gravity="center_vertical"
        android:padding="10dip" >
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_marginLeft="10dip"
            android:src="@drawable/isbn"/>
        
        <TextView 
            android:layout_marginLeft="20dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="@string/scan_book_isbn"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/add_book_to_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/background_view_rounded_single"
        android:clickable="true"
        android:padding="10dip" >
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_marginLeft="10dip"
            android:src="@drawable/ic_search_inverse"/>
        
        <TextView 
            android:layout_marginLeft="20dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="@string/key_search_lable"/>
        
    </LinearLayout>

</LinearLayout>