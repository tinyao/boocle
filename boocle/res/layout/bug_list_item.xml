<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/abs__list_selector_holo_light"
    android:orientation="vertical"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="8dip"
    android:paddingBottom="8dip" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/bug_item_name"
            style="@style/search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="陈甲第"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bug_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:text="2天前"
            android:textColor="@color/explore_sub_color_selector"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/bug_item_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="把所有的温柔留在饭否，再去面对那个充满感冒病毒的世界。"
            android:textColor="@color/explore_sub_color_selector"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip" >

            <TextView
                android:id="@+id/bug_item_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="系统: Android 2.3"
                android:layout_alignParentLeft="true"
                android:textColor="@color/explore_sub_color_selector"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bug_item_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="机型: Nexus 4"
                android:layout_alignParentRight="true"
                android:textColor="@color/explore_sub_color_selector"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>