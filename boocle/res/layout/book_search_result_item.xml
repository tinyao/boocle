<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="76dip"
    android:background="@drawable/abs__list_selector_holo_light"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/search_item_book_cover"
        android:layout_width="43dip"
        android:layout_height="60dip"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="8dip"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/default_bookcover0" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dip"
        android:layout_marginBottom="8dip" >

        <TextView
            android:id="@+id/search_item_book_title"
            style="@style/search_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dip"
            android:layout_marginTop="5dip"
            android:singleLine="true"
            android:text="可爱的Python"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/blabla"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/search_item_book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dip"
                android:singleLine="true"
                android:text="作者: 哲思社区"
                android:textColor="@color/explore_sub_color_selector"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/search_item_book_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dip"
                android:singleLine="true"
                android:text="出版: 电子工业出版社"
                android:textColor="@color/explore_sub_color_selector"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>