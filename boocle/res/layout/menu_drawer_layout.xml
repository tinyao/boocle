<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/rl_menu_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_menu_user_info"
            style="@style/slide_menu"
            android:background="#ff222222"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10.0dip"
            android:paddingTop="10.0dip" >

            <ImageView
                android:id="@+id/user_icon"
                style="@style/icon_user"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dip"
                android:layout_toRightOf="@id/user_icon"
                android:text="刘开成"
                android:textColor="#ffffffff"
                android:textSize="16.0sp" />
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5.0dip"
                android:src="@drawable/arrow_r" />
            
        </RelativeLayout>
        
        <ImageView
            android:id="@+id/img_divider_usrinfo"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:scaleType="fitXY"
            android:src="#ff1c1c1c" />

        <RelativeLayout
            android:id="@+id/drawer_menu_setting"
            style="@style/slide_menu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/slide_menu_selector" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.0dip"
                android:src="@drawable/message" />

            <TextView
                android:id="@+id/drawer_menu_msg_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:focusable="false"
                android:text="私        信"
                android:textColor="#ffffffff"
                android:textSize="16.0sp" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/drawer_menu_msg_txt"
                android:layout_alignBottom="@id/drawer_menu_msg_txt"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:focusable="false"
                android:text="2"
                android:gravity="center"
                android:background="@color/orange_carrot"
                android:textColor="#ffffffff"
                android:textSize="13.0sp" />
        </RelativeLayout>
        
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/divider_line_night" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/divider_line_night" />

        <RelativeLayout
            android:id="@+id/drawer_menu_book"
            style="@style/slide_menu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/slide_menu_selector" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.0dip"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:focusable="false"
                android:text="藏  书  阁"
                android:textColor="#ffffffff"
                android:textSize="16.0sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/divider_line_night" />

        <RelativeLayout
            android:id="@+id/drawer_menu_user"
            style="@style/slide_menu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/slide_menu_selector" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.0dip"
                android:src="@drawable/setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:focusable="false"
                android:text="书  友  圈"
                android:textColor="#ffffffff"
                android:textSize="16.0sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/divider_line_night"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/drawer_menu_msg"
            style="@style/slide_menu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/slide_menu_selector"
            android:visibility="gone" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.0dip"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:focusable="false"
                android:text="私        信"
                android:textColor="#ffffffff"
                android:textSize="16.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:focusable="false"
                android:paddingBottom="5.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:paddingTop="5.0dip"
                android:textColor="#ffffffff"
                android:textSize="16.0sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/divider_line_night" />

        <RelativeLayout
            android:id="@+id/drawer_menu_douban"
            style="@style/slide_menu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/slide_menu_selector" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.0dip"
                android:src="@drawable/setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:focusable="false"
                android:text="豆瓣推荐"
                android:textColor="#fff"
                android:textSize="16.0sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/divider_line_night" />

        <RelativeLayout
            android:id="@+id/drawer_menu_setting"
            style="@style/slide_menu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/slide_menu_selector" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.0dip"
                android:src="@drawable/setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:focusable="false"
                android:text="设        置"
                android:textColor="#ffffffff"
                android:textSize="16.0sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/divider_line_night" />
    </LinearLayout>

</RelativeLayout>