<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-30dip"
        android:layout_marginTop="-40dip"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_header_2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_bg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dip"
            android:padding="10dip" >

            <LinearLayout
                android:id="@+id/dev_tinyao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/background_view_rounded_single"
                android:padding="10dip" >

                <com.czzz.view.RoundImageView
                    android:id="@+id/dev_us_avatar"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="1dip"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/tinyao" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="\@tinyao"
                        android:textColor="@color/blue_white_selector"
                        android:shadowColor="#55000000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="2dip"
                        android:maxLines="2"
                        android:text="Android Coder, PM"
                        android:textColor="@color/explore_sub_color_selector"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dev_ibird"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:clickable="true"
                android:background="@drawable/background_view_rounded_single"
                android:padding="10dip" >

                <com.czzz.view.RoundImageView
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="1dip"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/ibird" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="\@ibirdyuan"
                        android:shadowColor="#55000000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:textColor="@color/blue_white_selector"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="2dip"
                        android:maxLines="2"
                        android:text="Web Coder, PM"
                        android:textColor="@color/explore_sub_color_selector"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dev_zxming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:clickable="true"
                android:background="@drawable/background_view_rounded_single"
                android:padding="10dip" >

                <com.czzz.view.RoundImageView
                    android:id="@+id/dev_us_avatar"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="1dip"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/zxming" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="\@Zxming"
                        android:shadowColor="#55000000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:textColor="@color/blue_white_selector"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="2dip"
                        android:maxLines="2"
                        android:text="Designer, PM"
                        android:textColor="@color/explore_sub_color_selector"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>